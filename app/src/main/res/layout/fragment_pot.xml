<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PotFragment">

    <!-- Título del Fragmento -->
    <TextView
        android:id="@+id/tvPotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan de Ordenamiento Territorial (POT)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/tvPotDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aquí puedes consultar toda la información relevante sobre el Plan de Ordenamiento Territorial (POT)."
        android:layout_margin="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvPotTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para más detalles -->
    <Button
        android:id="@+id/btnMoreDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver más detalles"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvPotDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
